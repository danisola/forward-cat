# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET        /                                       @controllers.Landing.index(langCode = "en")
GET        /$langCode<[a-z]{2}>/                   @controllers.Landing.index(langCode)
GET        /report                                 @controllers.Report.reportGet(langCode = "en")
GET        /$langCode<[a-z]{2}>/report             @controllers.Report.reportGet(langCode)
GET        /report-user                            @controllers.Report.reportUser(langCode = "en", proxy: String, message: String)
GET        /$langCode<[a-z]{2}>/report-user        @controllers.Report.reportUser(langCode, proxy: String, message: String)
GET        /contact                                @controllers.Contact.contactGet(langCode = "en")
GET        /$langCode<[a-z]{2}>/contact            @controllers.Contact.contactGet(langCode)
GET        /contact-sent                           @controllers.Contact.contactSent(langCode = "en", email: String, message: String)
GET        /$langCode<[a-z]{2}>/contact-sent       @controllers.Contact.contactSent(langCode, email: String, message: String)
GET        /confirm                                @controllers.ConfirmProxy.confirm(langCode = "en", p: String, h: String)
GET        /$langCode<[a-z]{2}>/confirm            @controllers.ConfirmProxy.confirm(langCode, p: String, h: String)
GET        /add                                    @controllers.AddProxy.addProxy(langCode = "en", proxy: String, email: String)
GET        /$langCode<[a-z]{2}>/add                @controllers.AddProxy.addProxy(langCode, proxy: String, email: String)
GET        /confirm-deletion                       @controllers.DeleteProxy.confirmDeletion(langCode = "en", p: String, h: String)
GET        /$langCode<[a-z]{2}>/confirm-deletion   @controllers.DeleteProxy.confirmDeletion(langCode, p: String, h: String)
GET        /delete                                 @controllers.DeleteProxy.delete(langCode = "en", p: String, h: String)
GET        /$langCode<[a-z]{2}>/delete             @controllers.DeleteProxy.delete(langCode, p: String, h: String)
GET        /extend                                 @controllers.ExtendProxy.extend(langCode = "en", p: String, h: String)
GET        /$langCode<[a-z]{2}>/extend             @controllers.ExtendProxy.extend(langCode, p: String, h: String)
GET        /stats                                  @controllers.Stats.render()
GET        /validate                               @controllers.ValidateProxy.validate(proxy: String)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                           controllers.Assets.at(path="/public", file)
